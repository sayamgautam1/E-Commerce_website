<div class="flex-column justify-space-around">
  <header class="page-header">
    <h1>
      <a href="/"><img
          src="/images/logo.webp"
          alt=""
          height="100px"
          width="100px"
        /></a>
    </h1>
    <nav>
      <!-- Conditionally render login or logout links -->
      {{#if logged_in}}
        <a href="/">HOME</a>

        <a href="/userprofile">PROFILE</a>
        <a href="/logout" id="logout">LOGOUT</a>

      {{else}}
        <a href="/">HOME</a>

        <a href="/login">LOGIN</a>
      {{/if}}
    </nav>
  </header>
  <main class="user-profile">
    <div class="row gutters-sm">
      <!--customer image of sort-->
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <img
                src="https://bootdey.com/img/Content/avatar/avatar7.png"
                alt="Admin"
                class="rounded-circle"
                width="150"
              />
              <div class="mt-3">
                <h4>{{customer.name}}</h4>
                <p class="text-secondary mb-1">SOme company they work at</p>

                <p class="text-muted font-size-sm">company name maybe</p>
                <button class="btn btn-primary">Order</button>
                <!-- <button class="btn btn-outline-primary">Message</button> -->
              </div>
            </div>
          </div>
        </div>
      </div>
      <!--customer details of some sort-->
      <div class="col-md-8">
        <div class="card mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Full Name</h6>
              </div>
              <div class="col-sm-9 text-secondary">{{customer.name}}</div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Email</h6>
              </div>
              <div class="col-sm-9 text-secondary">{{customer.email}}</div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Phone</h6>
              </div>
              <div class="col-sm-9 text-secondary">{{customer.phone1}}</div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Mobile</h6>
              </div>
              <div class="col-sm-9 text-secondary">{{customer.phone2}}</div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Address</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                {{customer.address}}
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col-sm-12">
                <a
                  class="btn btn-info"
                  target="__blank"
                  href="https://www.bootdey.com/snippets/view/profile-edit-data-and-skills"
                >Edit</a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!--past invoices if any-->
      <div class="card mt-3">
        <ul class="list-group list-group-flush">
          <li
            class="list-group-item d-flex justify-content-between align-items-center flex-wrap"
          >
            <h6 class="mb-0">Order Date maybe</h6>
            <button class="btn btn-outline-primary">invoices</button>
          </li>
          <li
            class="list-group-item d-flex justify-content-between align-items-center flex-wrap"
          >
            <h6 class="mb-0">Order Date maybe</h6>
            <button class="btn btn-outline-primary">invoices</button>
          </li>
        </ul>
      </div>
    </div>
  </main>
</div>