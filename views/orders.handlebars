<div class="flex-column justify-space-around">
  <header class="page-header">
    <h1>
      <a href="/"><img
          src="/images/logo.webp"
          alt=""
          height="100px"
          width="100px"
        /></a>
    </h1>
    <nav>
      <!-- Conditionally render login or logout links -->
      <!-- {{#if logged_in}} -->
          <a href="/">HOME</a>

          <a href="/userprofile">PROFILE</a>
          <a href="/logout" id="logout">LOGOUT</a>

          <!-- {{else}} -->
          <a href="/">HOME</a>

          <a href="/login">LOGIN</a>
          <!-- {{/if}} -->
    </nav>
  </header>
  <main class="order">
    <!-- Render the signup-->
    <div class="col-md-6 signup-section">
      <h2>Your conracted orders
        {{customer.name}}</h2>

      <form class="form signup-form">
        <div class="form-group">
          <label for="name-signup">product name</label>
          <input class="form-input" type="text" id="name-signup" />
        </div>
        <div class="form-group">
          <button
            class="btn btn-primary"
            type="submit"
            onclick="placeOrder(event)"
            data-id={{customer.id}}
          >
            Order
          </button>
        </div>
      </form>
    </div>
  </main>
</div>