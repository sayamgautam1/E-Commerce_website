<div class="flex-column justify-space-around">
  <header class="page-header">
    <h1>
      <a href="/"><img
          src="/images/logo.webp"
          alt=""
          height="100px"
          width="100px"
        /></a>
    </h1>
    <nav>
      <!-- Conditionally render login or logout links -->
      <!-- {{#if logged_in}} -->
          <a href="/">HOME</a>

          <a href="/userprofile">PROFILE</a>
          <a href="/logout" id="logout">LOGOUT</a>

          <!-- {{else}} -->
          <a href="/">HOME</a>

          <a href="/login">LOGIN</a>
          <!-- {{/if}} -->
    </nav>
  </header>

  <main class="order">

	<form class="orderForm container-fluid">
		{{!-- Render list of items --}}
		<div>
			{{!-- Render header --}}
			<div class="row">
				<div class="col-3 text-center">Item Name</div>
				<div class="col text-center">Quantity</div>
				<div class="col text-center">Unit Price</div>
				<div class="col text-center">Discount</div>
				<div class="col text-center">Tax Rate</div>
				<div class="col text-center">Item Note</div>
				<div class="col text-center">Item Total</div>
			</div>
			<hr>
    		<!-- Render the items-->
    		{{#each price as |item|}}
				{{> items}}
			{{/each}}
		</div>
		<hr>
		<div id="total" class="text-end px-5">
			<p class="mx-3">Total: $<span id="totalText">0</span></p>
		</div>

		<div class="row mb-2">
			<div class="col">
				<div class="input-group">
					<input type="date" class="form-control" id="dueDateInput" >
					<div class="input-group-append"><span class="input-group-text">Due Date</span></div>
				</div>
			</div>
			<div class="col">
				<div class="input-group input-group-sm">
					<span class="input-group-text">Invoice Note</span>
					<textarea id="invoiceNoteInput" class="form-control"></textarea>
				</div>
			</div>
		</div>

		{{!-- Render button to order --}}
		<div class="text-end px-5">
			<a href="/userprofile" class="btn btn-primary btnCancel">Cancel</a>
			<button type="submit" class="btn btn-primary" id="submitBtn">Submit Order</button>
		</div>
		
	</form>
  </main>
</div>

<button style="display:none;" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" id="launchModal">
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalLabel"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="modalBody">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


